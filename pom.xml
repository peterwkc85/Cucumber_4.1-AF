  <artifactId>Cucumber-4.2-Automation-Framework</artifactId>
  <version>1.0.0-SNAPSHOT</version>
  
  <properties>
  	<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
  	<java.version>1.9</java.version>
  </properties>
  
  
  <!-- =========================== Profiles ============================== -->
  <profiles>
  	<profile>
  		<id>sit</id>
  		<activation>
  			<property>
		        <name>env</name>
		        <value>sit</value>
      		</property>
  		</activation>
  	</profile>
  	<!-- mvn -Denv=sit clean test -->
  	
  	<profile>
  		<id>uat</id>
  		<activation>
  			<property>
		        <name>env</name>
		        <value>uat</value>
      		</property>
  		</activation>
  	</profile>
  	
  
  </profiles>
  
  
  <!-- ================================== Build ============================================= -->
  <build>
    	<pluginManagement>
      		<plugins>
      			<plugin>
		          <groupId>org.apache.maven.plugins</groupId>
		          <artifactId>maven-compiler-plugin</artifactId>
		          <version>3.8.0</version>
		          <configuration>
		             <source>1.9</source>
		          	 <target>1.9</target>
		          </configuration>
		        </plugin>
      		
      		
				<plugin>
        			<groupId>org.apache.maven.plugins</groupId>
        			<artifactId>maven-surefire-plugin</artifactId>
        			<version>3.0.0-M3</version>
        			<configuration>
        				<parallel>classes</parallel>
    					<threadCount>12</threadCount>
          				
          				<properties>
					        <property>
					            <name>dataproviderthreadcount</name>
					            <value>20</value>
					        </property>
				    	</properties>
				    	
				    	<systemPropertyVariables> 
							<extent.reporter.html.start>true</extent.reporter.html.start> 
							<extent.reporter.html.out>Report/TestReport.html</extent.reporter.html.out> 
						</systemPropertyVariables> 
				    	
				    	<includes>
            				<include>ParallelRunner.java</include>
          				</includes>
				    	
        			</configuration>
    			</plugin>
	  		</plugins>
		</pluginManagement>
	</build>
	
